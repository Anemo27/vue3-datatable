{
    "name": "@anemo27/vue3-datatable",
    "version": "1.1.0",
    "description": "Vue3 Datatable - fully customizable & easy to use datatable library with enhanced type safety",
    "private": false,
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "./dist/vue3-datatable.umd.js",
    "module": "./dist/vue3-datatable.js",
    "types": "./dist/main.d.ts",
    "exports": {
        ".": {
            "import": "./dist/vue3-datatable.js",
            "require": "./dist/vue3-datatable.umd.js"
        },
        "./dist/style.css": "./dist/style.css"
    },
    "author": {
        "name": "Anemo27",
        "email": "premieofficial@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Anemo27/vue3-datatable.git"
    },
    "bugs": {
        "url": "https://github.com/Anemo27/vue3-datatable/issues"
    },
    "homepage": "https://github.com/Anemo27/vue3-datatable#readme",
    "funding": "https://github.com/sponsors/Anemo27",
    "keywords": [
        "vue3",
        "vue",
        "vuejs",
        "component",
        "datatable",
        "vue3 datatable",
        "vue datatable",
        "vue3-datatable",
        "vue grid",
        "vue3 grid",
        "vue table",
        "vue3 table",
        "datagrid",
        "data-grid",
        "data-table",
        "table",
        "grid",
        "filter",
        "sorting",
        "pagination"
    ],
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build && vue-tsc --emitDeclarationOnly && pnpm run tailwind:build && pnpm run copy-css",
        "preview": "vite preview",
        "tailwind": "npx @tailwindcss/cli -i ./src/assets/css/tailwind.css -o ./dist/style.css --watch",
        "tailwind:build": "npx @tailwindcss/cli -i ./src/assets/css/tailwind.css -o ./dist/style.css --minify",
        "copy-css": "copy dist\\style.css dist\\vue3-datatable.css"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.13",
        "@types/node": "^24.5.0",
        "@vitejs/plugin-vue": "^6.0.1",
        "autoprefixer": "^10.4.21",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.13",
        "typescript": "^5.9.2",
        "vite": "^7.1.5",
        "vue": "^3.5.21",
        "vue-tsc": "^3.0.7"
    },
    "peerDependencies": {
        "vue": ">=3.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not ie 11"
    ]
}
